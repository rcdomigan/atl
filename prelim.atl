(def (apply-operator operator acc lst)
  (if (Null? lst)
    acc
    (apply-operator operator
                    (operator acc (car lst))
                    (cdr lst))))

(define-macro
  (+ lst)
  (list apply-operator bin-add (car lst)
        (cons 'list (cdr lst))))

(define-macro
  (- lst)
  (list apply-operator bin-sub (car lst)
        (cons 'list (cdr lst))))

