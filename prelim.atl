; def allows the (def (foo a b) (...))  short form in place of
; (define-value foo (\ (a b) (...)))
(define-macro
  (def ast)
  (seq-to-ast
   (list
    define-value
    (if (list? (ast 0))
      (list ((ast 0) 0) (list \ (slice (ast 0) 1) (ast 1)))
      (list (ast 0) (ast 1))))))

